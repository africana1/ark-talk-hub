generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

enum crdb_internal_region {
  aws_eu_central_1 @map("aws-eu-central-1")
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([id])
}

model Speaker {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  phone     String   @unique
  talk      Talk[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([id])
}

model Talk {
  id         String     @id @default(uuid())
  topicTitle String     @unique
  date       DateTime
  time       String
  location   String
  speaker    Speaker    @relation(fields: [id], references: [id])
  attendee   Attendee[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([id])
}

model Attendee {
  id             String   @id @default(uuid())
  firstName      String
  lastName       String
  phone          String?  @unique
  email          String   @unique
  password       String
  registrationId String   @unique
  role           String   @default("attendee")
  talk           Talk[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([id])
}

model Token {
  id        String   @id @default(uuid())
  token     String   @unique
  user      String
  type      String
  expires   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([id, token])
}
